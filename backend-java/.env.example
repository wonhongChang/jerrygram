# Environment Variables for Jerrygram Java Backend
# Copy this file to .env and fill in your actual values

# Database Configuration
DB_URL=jdbc:postgresql://localhost:15432/jerrygram
DB_USERNAME=postgres
DB_PASSWORD=your_secure_database_password_here

# Redis Configuration  
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your_super_long_and_secure_jwt_secret_key_here_at_least_256_bits
JWT_ISSUER=Jerrygram
JWT_AUDIENCE=Jerrygram-users
JWT_EXPIRATION=10800000

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200

# Azure Blob Storage Configuration (optional - leave empty to use local storage)
AZURE_BLOB_ENABLED=false
AZURE_BLOB_CONNECTION_STRING=your_azure_blob_storage_connection_string_here
AZURE_BLOB_POSTS_CONTAINER=post-images
AZURE_BLOB_PROFILES_CONTAINER=profile-images
